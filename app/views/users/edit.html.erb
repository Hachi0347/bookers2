<%= render 'layouts/header' %>
<main>
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました<br>
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class='container'>
   <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>
       <%= form_with model:@user, local:true do |f| %>
       <div class="form-group">
         <label for="user_name">Name</label>
         <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "#{current_user.name}", :class => "form-control name" %>
       </div>
       <div class="form-group">
         <label for="user_image">Image</label>
         <%= f.attachment_field :profile_image %>
       </div>
       <div class="form-group">
         <label for="user_introduction">Introduction</label>
         <%= f.text_area :introduction, placeholder: "#{current_user.introduction}", :class => "form-control introduction" %>
       </div>
       <div class="form-group">
         <%= f.submit "Update User", :class => "btn btn-secondary" %>
       </div>
     <% end %>
    </div>
  </div>
</main>
<footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
